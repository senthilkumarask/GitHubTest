<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE gsa-template
        PUBLIC "-//Art Technology Group, Inc.//DTD General SQL Adapter//EN"
        "http://www.atg.com/dtds/gsa/gsa_1.0.dtd">
<gsa-template>

	<header>
		<name>ChannelThemes</name>
		<author></author>
	</header>


<item-descriptor display-name-resource="itemDescriptorChannelTheme" cache-mode="simple" id-space-name="channelThemeInfo" query-cache-size="50" name="channelThemeInfo" display-property="channelThemeName" item-cache-size="50">
         <attribute name="resourceBundle" value="com.bbb.stofu.StofuTemplateResources"/>
         
         <table id-column-name="CHANNEL_THEME_ID" name="BBB_GS_CH_THEME_INFO" type="primary">
         <property name="id" column-name="CHANNEL_THEME_ID" display-name-resource="channelThemeId">
         	<attribute name="resourceBundle" value="com.bbb.stofu.StofuTemplateResources"/>
         	<attribute name="propertySortPriority" value="0"/>
         </property>
         <property name="channelThemeName" data-type="string" column-name="CHANNEL_THEME_NAME" display-name-resource="channelThemeName" required="true">
         	<attribute name="resourceBundle" value="com.bbb.stofu.StofuTemplateResources"/>
         	<attribute name="propertySortPriority" value="1"/>
         </property>
         <property name="hostURL" data-type="string" column-name="HOST_URL" display-name-resource="themeHostURL" required="true" default="www.bedbathandbeyond.com">
        	<attribute name="resourceBundle" value="com.bbb.stofu.StofuTemplateResources"/>
         	<attribute name="propertySortPriority" value="4"/>
         </property>
         </table>
         
         <table name="BBB_GS_CH_THEME_CATS" type="multi" id-column-name="CHANNEL_THEME_ID" multi-column-name="site_id">
			<property name="appCategories" column-name="CAT_CONTAINER_ID" data-type="map" component-item-type="categoryContainer" display-name-resource="appCategories" repository="/com/bbb/channel/ChannelRepository">
				<attribute name="resourceBundle" value="com.bbb.stofu.StofuTemplateResources"/>
				<attribute name="propertySortPriority" value="2"/>
			</property>
		</table>
		
		<table name="BBB_GS_FACET_CH_THEME" type="auxiliary" id-column-names="CHANNEL_THEME_ID">
	      	<property name="facet" column-name="FACET_ID" display-name-resource="facet" item-type="skuFacetType" repository="/com/bbb/ipad/SkuFacetRepository" >
	      		<attribute name="resourceBundle" value="com.bbb.stofu.StofuTemplateResources"/>
				<attribute name="propertySortPriority" value="3"/>
	      	</property>
   		</table>
         
</item-descriptor>
   
</gsa-template>
