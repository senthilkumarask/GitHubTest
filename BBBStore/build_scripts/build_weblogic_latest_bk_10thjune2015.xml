                <exec dir="${dynamo.home}/bin" vmlauncher="false" executable="${dynamo.home}/bin/runAssembler" failonerror="yes">
                        <arg value="-overwrite" />
                        <arg line="-dynamo-env-properties ${dynamo.home}/dynamolog.properties" />
