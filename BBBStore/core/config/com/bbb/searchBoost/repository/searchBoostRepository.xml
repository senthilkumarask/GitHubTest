<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE gsa-template
        PUBLIC "-//Art Technology Group, Inc.//DTD General SQL Adapter//EN"
        "http://www.atg.com/dtds/gsa/gsa_1.0.dtd">
<gsa-template>

	<header>
		<name>Search Boost</name>
		<author></author>
	</header>
	
	<item-descriptor name="SearchBoostAlgorithm" display-name="SearchBoostAlgorithm" display-property="boostCode" cache-mode="simple" item-cache-size="1000" query-cache-size="1000" last-modified-property="lastModifiedDate">
	  <table name="BBB_Search_Boost_Entry" type="primary" id-column-name="Entry_id">
	     <property name="entryId" column-name="Entry_id" data-type="String" display-name-resource="entryId">
	        <attribute name="resourceBundle" value="com.bbb.commerce.catalog.BBBSearchBoostResources"/>
	        <attribute name="propertySortPriority" value="0"/>
	     </property> 
	     <property name="boostCode" column-name="Boost_Code" data-type="String" display-name-resource="boostCode">
	       <attribute name="resourceBundle" value="com.bbb.commerce.catalog.BBBSearchBoostResources"/>
	       <attribute name="propertySortPriority" value="0"/>
	     </property>
	     <property name="pageType" column-name="Page_Type" data-type="enumerated" display-name-resource="pageType" required="true">
	       <attribute name="resourceBundle" value="com.bbb.commerce.catalog.BBBSearchBoostResources"/>
	       <option value="Search" code="01"/>
	       <option value="L2/L3" code="02"/>
	       <option value="Brand" code="03"/>
	       <attribute name="propertySortPriority" value="1"/>
	     </property>
	     <property name="omnitureEventRequired" column-name="Omniture_Event_Required" data-type="boolean" display-name-resource="omnitureEventRequired">
	       <attribute name="resourceBundle" value="com.bbb.commerce.catalog.BBBSearchBoostResources"/>
	       <attribute name="propertySortPriority" value="2"/>
	     </property>
	     <property name="randomizationRequired" column-name="Randomization_Required" data-type="boolean" display-name-resource="randomizationRequired">
	       <attribute name="resourceBundle" value="com.bbb.commerce.catalog.BBBSearchBoostResources"/>
	       <attribute name="propertySortPriority" value="3"/>
	     </property>
	     <property name="lastModifiedDate" column-name="Last_Mod_Date" display-name-resource="lastModifiedDate" data-type="timestamp" hidden="true">
			<attribute name="resourceBundle" value="com.bbb.commerce.catalog.BBBSearchBoostResources"/>
			<attribute name="propertySortPriority" value="4"/>
		</property> 	     
	  </table>
	  
	  <table name="BBB_Boost_Algorithm_Rel" type="multi" multi-column-name="sequence_num" id-column-name="Entry_id">
	    <property name="algorithmId" column-name="Algorithm_Id" data-type="list" component-item-type="SearchBoostAlgorithmItem" display-name-resource="algorithms">
	      <attribute name="resourceBundle" value="com.bbb.commerce.catalog.BBBSearchBoostResources"/>
	      <attribute name="propertySortPriority" value="5"/>
	    </property>
	  </table>
	  
	  <table name="BBB_SearchBoost_Site" type="multi" id-column-name="Entry_id">
			<property name="sites" column-name="site_id"  display-name-resource="sites" component-item-type="siteConfiguration" data-type="set" repository="/atg/multisite/SiteRepository">
				<attribute name="resourceBundle" value="com.bbb.commerce.catalog.BBBSearchBoostResources" />
				<attribute name="propertySortPriority" value="6" />
      	</property>
      </table>  
	</item-descriptor>
	
	<item-descriptor name="SearchBoostAlgorithmItem" display-name="SearchBoostAlgorithmItem" display-property="algorithmDescription" cache-mode="simple" item-cache-size="1000" query-cache-size="1000" last-modified-property="lastModifiedDate">
	  <table name="BBB_Boost_Algorithm_List" type="primary" id-column-name="Algorithm_Id">
	     <property name="algorithmName" column-name="Algorithm_Name" data-type="String" display-name-resource="algorithmName">
	        <attribute name="resourceBundle" value="com.bbb.commerce.catalog.BBBSearchBoostResources"/>
	        <attribute name="propertySortPriority" value="1"/>
	     </property>
	     <property name="percentage" column-name="Percentage" data-type="int" display-name-resource="percentage">
	        <attribute name="resourceBundle" value="com.bbb.commerce.catalog.BBBSearchBoostResources"/>
	        <attribute name="propertySortPriority" value="2"/>
	     </property>
	     <property name="endecaProperty" column-name="Endeca_Property" data-type="String" display-name-resource="endecaProperty">
	        <attribute name="resourceBundle" value="com.bbb.commerce.catalog.BBBSearchBoostResources"/>
	        <attribute name="propertySortPriority" value="3"/>
	     </property>
	     <property name="algorithmType" column-name="Algorithm_Type" data-type="enumerated" display-name-resource="algorithmType" required="true">
	       <attribute name="resourceBundle" value="com.bbb.commerce.catalog.BBBSearchBoostResources"/>
	       <option value="Omniture Boosting" code="01"/>
	       <option value="Sorting" code="02"/>
	       <option value="Facet" code="03"/>	  
	       <attribute name="propertySortPriority" value="4"/>   
	     </property>
	     <property name="algorithmDescription" column-name="Algorithm_Description" data-type="String" display-name-resource="algorithmDescription">
	        <attribute name="resourceBundle" value="com.bbb.commerce.catalog.BBBSearchBoostResources"/>
	        <attribute name="propertySortPriority" value="5"/>
	     </property>
	     <property name="lastModifiedDate" column-name="Last_Mod_Date" display-name-resource="lastModifiedDate" data-type="timestamp" hidden="true">
			<attribute name="resourceBundle" value="com.bbb.commerce.catalog.BBBSearchBoostResources"/>
			<attribute name="propertySortPriority" value="6"/>
		</property>
	  </table>
	</item-descriptor>
	
</gsa-template>