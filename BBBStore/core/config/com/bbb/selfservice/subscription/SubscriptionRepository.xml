<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE gsa-template
        PUBLIC "-//Art Technology Group, Inc.//DTD General SQL Adapter//EN"
        "http://www.atg.com/dtds/gsa/gsa_1.0.dtd">
<gsa-template>
  <header>
    <name>BBB Subscription and Un-Subscription</name>
    <author></author>
    <version>$Revision: #1 $</version>
  </header>
  <item-descriptor name="subscribe" cache-mode="simple">
	<table name="bbb_subscribe_users" type="primary" id-column-name="sub_user_id">
		<property name="sub_user_id" column-name="sub_user_id" data-type="string"/>	
		<property name="email" column-name="email" data-type="string"/>
		<property name="salutation" column-name="salutation" data-type="string"/>
		<property name="firstName" column-name="first_name" data-type="string"/>
		<property name="lastName" column-name="last_name" data-type="string"/>
		<property name="phone" column-name="phone" data-type="string"/>
		<property name="address1" column-name="address1" data-type="string"/>
		<property name="address2" column-name="address2" data-type="string"/>
		<property name="city" column-name="city" data-type="string"/>
		<property name="state" column-name="state" data-type="string"/>
		<property name="zip" column-name="zip" data-type="string"/>
		<property name="optEmail" column-name="opt_email" data-type="boolean"/>
		<property name="optDirectMail" column-name="opt_direct_mail" data-type="boolean"/>
		<property name="optMobile" column-name="opt_mobile" data-type="boolean"/>
        <property name="subDate" column-name="sub_datetime" data-type="timestamp"/>
	</table>		
	</item-descriptor>
	<item-descriptor name="unsubscribe_mail" cache-mode="simple">
	<table name="bbb_unsubscribe_direct_mail" type="primary" id-column-name="mail_unsub_user_id">
		<property name="email" column-name="email" data-type="string"/>
		<property name="firstName" column-name="first_name" data-type="string"/>
		<property name="lastName" column-name="last_name" data-type="string"/>
		<property name="phone" column-name="phone" data-type="string"/>
		<property name="address1" column-name="address1" data-type="string"/>
		<property name="address2" column-name="address2" data-type="string"/>
		<property name="city" column-name="city" data-type="string"/>
		<property name="state" column-name="state" data-type="string"/>
		<property name="zip" column-name="zip" data-type="string"/>
        <property name="mailUnsubDate" column-name="mail_unsub_date" data-type="timestamp"/>
	</table>		
	</item-descriptor>
	<item-descriptor name="unsubscribe_email" cache-mode="simple">
	<table name="bbb_unsubscribe_email" type="primary" id-column-name="email_unsub_user_id">
        <property name="email" column-name="email" data-type="string"/>
		<property name="frequency" column-name="frequency" data-type="int"/>
        <property name="emailUnsubDate" column-name="email_unsub_date" data-type="timestamp"/>
	</table>		
	</item-descriptor>
</gsa-template>