<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE gsa-template
        PUBLIC "-//Art Technology Group, Inc.//DTD General SQL Adapter//EN"
        "http://www.atg.com/dtds/gsa/gsa_1.0.dtd">
<gsa-template>
    <header>
        <name>Schools Template</name>
        <author></author>
    </header>
    
    <item-descriptor name="schools" display-name-resource="schoolsRepository" display-property="schoolName" cache-mode="simple" item-cache-size="1000" >
		<attribute name="resourceBundle" value="com.bbb.selfservice.repository.SchoolTemplateResources"/>
		<table name="BBB_SCHOOLS" type="primary" id-column-name="school_id">
			<property name="id" column-name="school_id" display-name-resource="schoolId" category-resource="BasicInfo" writable="true">
        		<attribute name="propertySortPriority" value="0" />
             	<attribute name="resourceBundle" value="com.bbb.selfservice.repository.SchoolTemplateResources" />
        	</property>
        	<property name="schoolName" column-name="SCHOOL_NAME" display-name-resource="schoolName" data-type="string" category-resource="BasicInfo">
            	<attribute name="resourceBundle" value="com.bbb.selfservice.repository.SchoolTemplateResources"/>
            	<attribute name="propertySortPriority" value="1"/>
           	</property>           	
           	<property name="addrLine1" column-name="ADDR_LINE1" display-name-resource="addrLine1" data-type="string" category-resource="SchoolAddressInfo">
            	<attribute name="resourceBundle" value="com.bbb.selfservice.repository.SchoolTemplateResources"/>
            	<attribute name="propertySortPriority" value="2"/>
           	</property>
           	<property name="addrLine2" column-name="ADDR_LINE2" display-name-resource="addrLine2" data-type="string" category-resource="SchoolAddressInfo">
            	<attribute name="resourceBundle" value="com.bbb.selfservice.repository.SchoolTemplateResources"/>
            	<attribute name="propertySortPriority" value="3"/>
           	</property>
           	<property name="city" column-name="CITY" display-name-resource="city" data-type="string" category-resource="SchoolAddressInfo">
            	<attribute name="resourceBundle" value="com.bbb.selfservice.repository.SchoolTemplateResources"/>
            	<attribute name="propertySortPriority" value="4"/>
           	</property>           				
			<property name="state" column-name="STATE" display-name-resource="state" data-type="string" category-resource="SchoolAddressInfo" >
            	<attribute name="resourceBundle" value="com.bbb.selfservice.repository.SchoolTemplateResources"/>
            	<attribute name="propertySortPriority" value="5"/>
           	</property>
           	<property name="zip" column-name="ZIP" display-name-resource="zip" data-type="string" category-resource="SchoolAddressInfo">
            	<attribute name="resourceBundle" value="com.bbb.selfservice.repository.SchoolTemplateResources"/>
            	<attribute name="propertySortPriority" value="6"/>
           	</property>
			<property name="hidden" column-name="HIDDEN" display-name-resource="hidden" data-type="string" category-resource="SchoolAddressInfo">
            	<attribute name="resourceBundle" value="com.bbb.selfservice.repository.SchoolTemplateResources"/>
            	<attribute name="propertySortPriority" value="7"/>
           	</property>
		</table>
    </item-descriptor>
</gsa-template>