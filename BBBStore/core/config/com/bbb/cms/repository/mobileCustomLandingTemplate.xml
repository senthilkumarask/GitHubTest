<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE gsa-template
        PUBLIC "-//Art Technology Group, Inc.//DTD General SQL Adapter//EN"
        "http://www.atg.com/dtds/gsa/gsa_1.0.dtd">
<gsa-template>

	<header>
		<name>Mobile Custom Landing Page template</name>
		<author></author>
	</header>

	<!--/////////////////////////////// -->
	<!--Mobile Custom Landing Page -->
	<!--/////////////////////////////// -->

	<item-descriptor name="mobileCustomLandingTemplate"
		display-name-resource="customLandingTemplate" display-property="associatedCategory"
		cache-mode="simple">
		<attribute name="resourceBundle" value="com.bbb.cms.CustomLandingTemplateResources" />

		<table name="BBB_MOBILE_CLP_TEMPLATE" type="primary" id-column-name="clp_template_id">

			<property name="id" column-name="clp_template_id"
				display-name-resource="customLandingPageTemplateId" writable="true"
				category-resource="basicInfo">
				<attribute name="propertySortPriority" value="0"/>
				<attribute name="resourceBundle" value="com.bbb.cms.CustomLandingTemplateResources" />
			</property>
			
			
			<property name="clpTitle" column-name="clp_title"
				display-name-resource="clpTitle" writable="true"
				category-resource="basicInfo">
				<attribute name="propertySortPriority" value="0"/>
				<attribute name="resourceBundle" value="com.bbb.cms.CustomLandingTemplateResources" />
			</property>
			
			<property name="clpName" column-name="clp_name"
				display-name-resource="clpName" writable="true"
				category-resource="basicInfo" required="true">
				<attribute name="propertySortPriority" value="1"/>
				<attribute name="resourceBundle" value="com.bbb.cms.CustomLandingTemplateResources" />
			</property>
			
			<property name="associatedCategory" column-name="associated_category"
				display-name-resource="associatedCategory" writable="true"
				category-resource="basicInfo">
				<attribute name="propertySortPriority" value="2"/>
				<attribute name="resourceBundle" value="com.bbb.cms.CustomLandingTemplateResources" />
			</property>

			<property name="channel" column-name="channel"
				display-name-resource="channel" hidden="true" default="MobileWeb"
				category-resource="basicInfo">
				<attribute name="resourceBundle" value="com.bbb.cms.CustomLandingTemplateResources" />
				<attribute name="propertySortPriority" value="3"/>
			</property>
			
			<property name="seoStaticText" data-type="big string" column-name="seo_static_text" category-resource="basicInfo" display-name-resource="seoStaticText">
		        <attribute name="resourceBundle" value="com.bbb.cms.CustomLandingTemplateResources" />
		        <attribute name="propertySortPriority" value="4"/>
	      	</property>

		</table>

		<table name="BBB_MOBILE_CLP_SITES" type="multi" id-column-names="clp_template_id">
			<property name="sites" column-name="site_id"
				display-name-resource="appSites" category-resource="basicInfo"
				component-item-type="siteConfiguration" repository="/atg/multisite/SiteRepository"
				required="true" data-type="set">
				<attribute name="resourceBundle" value="com.bbb.cms.CustomLandingTemplateResources" />
				<attribute name="propertySortPriority" value="10" />
			</property>
		</table>

		<table name="BBB_MOBILE_CLP_HEROIMAGE" type="multi" id-column-names="clp_template_id" multi-column-name="sequence_num">
			<property name="heroImagePromoBox" repository="/com/bbb/cms/repository/WSHomePageTemplate" column-names="hero_image" display-name-resource="imageBox" data-type="list"
				component-item-type="imageBox"  category-resource="basicInfo">
				<attribute name="resourceBundle" value="com.bbb.cms.CustomLandingTemplateResources" />
				<attribute name="propertySortPriority" value="5" />
			</property>
		</table>

		
		<table name="BBB_MOBILE_1CROSS_PBOX_TIER" type="multi" multi-column-name="sequence_num" id-column-names="clp_template_id" >
	      <property name="1XPromoTierLayOut" column-names="promoboxtemp_id"  data-type="list" display-name-resource="1XPromoTierLayOut" 
	      component-item-type="mobilePromoBox1MultiContentLayout"  repository="/com/bbb/cms/repository/WSCategoryLandingTemplate" category-resource="1XPromoContainers"> 
	       <attribute name="resourceBundle" value="com.bbb.cms.CustomLandingTemplateResources"/>
	       <attribute name="propertySortPriority" value="7"/>
	      </property>
       </table>
		
		<table name="BBB_MOBILE_2CROSS_PBOX_TIER" type="multi" multi-column-name="sequence_num" id-column-names="clp_template_id" >
	      <property name="2XPromoTierLayOut" column-names="promoboxtemp_id"  data-type="list" display-name-resource="2XPromoTierLayOut" 
	      component-item-type="mobilePromoBox2MultiContentLayout" repository="/com/bbb/cms/repository/WSCategoryLandingTemplate"  category-resource="2XPromoContainers">
	       <attribute name="resourceBundle" value="com.bbb.cms.CustomLandingTemplateResources"/>
	       <attribute name="propertySortPriority" value="9"/>
	      </property>
       </table>
		
	</item-descriptor>
	
  
</gsa-template>