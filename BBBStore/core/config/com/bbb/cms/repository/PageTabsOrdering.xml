<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE gsa-template
        PUBLIC "-//Art Technology Group, Inc.//DTD General SQL Adapter//EN"
        "http://www.atg.com/dtds/gsa/gsa_1.0.dtd">
<gsa-template>
    <header>
        <name>PageTabs Template</name>
        <author></author>
    </header>
     
  <!--///////////////////////////////-->
  <!--          Tab Page             -->
  <!--///////////////////////////////-->
  
	<item-descriptor name="pageTabs" display-name-resource="pageTabsTemplate" display-property="id" cache-mode="simple" item-cache-size="50" query-cache-size="50">
		<attribute name="resourceBundle" value="com.bbb.cms.CmsTemplateResources"/>
		<table name="BBB_PAGETABS_TEMPLATE" type="primary" id-column-name="pagetabs_id">
			<property name="id" column-name="pagetabs_id" display-name-resource="pageTabsTemplateId" category-resource="BasicInfo" writable="true"> 
         		<attribute name="propertySortPriority" value="0" />
             	<attribute name="resourceBundle" value="com.bbb.cms.CmsTemplateResources" /> 
        	</property>
        	<property name="pageName" column-name="page_name" display-name-resource="pageName" data-type="enumerated" category-resource="BasicInfo" >
    	        <attribute name="resourceBundle" value="com.bbb.cms.CmsTemplateResources"/>
	            <attribute name="propertySortPriority" value="1"/>
            	<attribute name="uiwritable" value="true"/>
            	<attribute name="useCodeForValue" value="false"/>
	            <option value="Home Page" code="0"/>
            	<option value="Category Landing Page" code="1"/>
				<option value="College Landing Page" code="2"/>
				<option value="Product Details Page" code="3"/>
        	</property>
		</table>
     	<table name="BBB_PT_TABS_LIST" type="multi" id-column-name="pagetabs_id" multi-column-name="sequence_num">
		   	<property name="tabDetails" column-names="tab_details_id" data-type="list" display-name-resource="tabDetails" component-item-type="tabsDetail" category-resource="BasicInfo" >
           		<attribute name="resourceBundle" value="com.bbb.cms.CmsTemplateResources"/>
            	<attribute name="propertySortPriority" value="3"/>
        	</property> 
    	</table>
  	</item-descriptor>
  	
  	<item-descriptor name="tabsDetail" display-name-resource="tabNames" display-property="id" cache-mode="simple" item-cache-size="50" query-cache-size="50">
		<attribute name="resourceBundle" value="com.bbb.cms.CmsTemplateResources"/>      
		<table name="BBB_TABS_DETAIL" type="primary" id-column-name="tab_id">
			<property name="id" column-name="tab_id" display-name-resource="tabId" category-resource="BasicInfo" writable="true">
	        		<attribute name="propertySortPriority" value="0" />
	             	<attribute name="resourceBundle" value="com.bbb.cms.CmsTemplateResources" />
	       	</property>
	       	<property name="tabName" column-name="tab_name" display-name-resource="tabName" data-type="enumerated" category-resource="BasicInfo" >
	            <attribute name="resourceBundle" value="com.bbb.cms.CmsTemplateResources"/>
	            <attribute name="propertySortPriority" value="1"/>
	            <attribute name="uiwritable" value="true"/>
	            <attribute name="useCodeForValue" value="false"/>
	            <option value="Also Check Out" code="0"/>
	            <option value="Last Viewed Items" code="1"/>
				<option value="Top College Items" code="2"/>
				<option value="Clearance Deals" code="3"/>
				<option value="Just For You" code="4"/>
				<option value="Customer Also Viewed" code="5"/>
				<option value="Frequently Bought With" code="6"/>
				<option value="Top University Items" code="7"/>
	      	</property>
    	</table>
    </item-descriptor>
</gsa-template>