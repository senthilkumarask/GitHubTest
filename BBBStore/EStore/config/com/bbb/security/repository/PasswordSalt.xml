<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE gsa-template
       PUBLIC "-//Art Technology Group, Inc.//DTD General SQL Adapter//EN"
        "http://www.atg.com/dtds/gsa/gsa_1.0.dtd">
<gsa-template>
	<header>
		<name>Password Salt Repository</name>
		<author>BBB Technical Team</author>
		<version>1.0</version>
	</header>                   
  <!--///////////////////////////////-->
  <!--                               -->
  <!--          Password Salt        -->
  <!--                               -->
  <!--///////////////////////////////-->                                                  
	<item-descriptor name="passwordSalt" display-name-resource="PasswordSalt" display-property="secId" cache-mode="disabled" >
		<table name="BBB_SEC_RANDOM_NUMBER" id-column-name="sec_id" type="primary">
			<property name="secId" data-type="string" column-name="sec_id" display-name-resource="secId" category-resource="Password Salt" required="true">							
			<attribute name="propertySortPriority" value="-2"/>
			</property>
			<property name="value" data-type="string" column-name="sec_value" display-name-resource="value" category-resource="Password Salt" >					
			<attribute name="propertySortPriority" value="-1"/>
			</property>
			<property name="iterations" data-type="int" column-name="iterations" display-name-resource="iterations" category-resource="Temp Password Link" default="200" >					
			<attribute name="propertySortPriority" value="-1"/>
			</property>	
		</table>
	</item-descriptor>
</gsa-template>
